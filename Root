<script>
const lines = [
"x0d@havoc> fingerprint verified",
"x0d@havoc> system access GRANTED",
"x0d@havoc> monitoring active...",
"x0d@havoc> fake system scan running...",
"[WARNING] suspicious entities logged",
"[NOTICE] this is an awareness platform",
"x0d@havoc> stay alert. stay defensive."
];

let i=0,j=0;
const speed=40;
const terminal=document.getElementById("terminal");

function typeLine(){
    if(i<lines.length){
        if(j<lines[i].length){
            terminal.textContent+=lines[i][j++];
            setTimeout(typeLine,speed);
        }else{
            terminal.textContent+="\n";
            i++; j=0;
            setTimeout(typeLine,400);
        }
    }
}

function verify(){
    document.getElementById("alertSound").play();
    document.getElementById("lockScreen").style.display="none";
    document.getElementById("mainScreen").style.display="flex";
    setTimeout(typeLine,500);
}
</script>

