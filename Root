<script>
const lines = [
  "HAVOC SENTINEL INITIALIZING...",
  "Loading Zero-Day Defenders modules...",
  "Threat Watch Unit: ACTIVE",
  "Region Control: BANGLADESH",
  "",
  "System Scan in progress...",
  "[██████████░░░░░░░░░░] 42%",
  "[████████████████░░░] 87%",
  "[██████████████████] 100%",
  "",
  "⚠ WARNING ⚠",
  "You are being observed.",
  "",
  "Scammers, blackmailers, intruders —",
  "This platform is NOT for you.",
  "",
  "We don't forget.",
  "We don't forgive.",
  "",
  "HAVOC x Zero-Day Defenders",
  "Threat Watch Unit"
];

let l=0,c=0;
const term=document.getElementById("terminal");

function type(){
  if(l<lines.length){
    if(c<lines[l].length){
      term.innerHTML+=lines[l].charAt(c);
      c++;
      setTimeout(type,32);
    }else{
      term.innerHTML+="\n";
      l++;c=0;
      setTimeout(type,180);
    }
  }
}

function unlock(){
  document.getElementById("lockScreen").style.display="none";
  document.getElementById("mainScreen").style.display="flex";
  type();
}
</script>

